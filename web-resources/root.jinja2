{% extends "base.jinja2" %}

{% block head %}
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/bodymovin/5.8.1/lottie.min.js"></script>

<link href="//cdn.jsdelivr.net/npm/css.gg/icons/all.css" rel="stylesheet">

<link rel="stylesheet" href="{{ static("base.css") }}">
{% endblock %}

{% block content %}
{% endblock %}

{% block after %}
<div class="bg">
  <div class="bg_inner"></div>
</div>
<div class="blur auth vert_center">
  <div id="tg_icon"></div>
  <div class="waiting_for_auth">Ruxsat kutmoqda...</div>
  <div class="confirm_auth">Iltimos, harakatni tasdiqlang <span style="color:#28a0dc">Telegram</span></div>
</div>
<div class="auth-code-form blur">
  <div id="monkey"></div>
  <div id="monkey-close"></div>
  <span class="code-caption">Telegramdan olgan kodingizni kiriting</span>
  <input type="text" class="code-input" inputmode="numeric" autocomplete="off">
</div>
<div class="wrapper">
  <div class="blur main finish_block">
    <div id="installation_icon"></div>
    <div class="title">Shaxsiy Userbot o'rnatilgan</div>
    <div class="description">
      Shaxsiy Userbot foydalanishga tayyor. Endi ushbu sahifani yopishingiz mumkin.
    </div>
  </div>
  <div class="blur main installation">
    <div class="title">◍ Shaxsiy ◍ ◍ Userbot ◍</div>
    <div class="description"><span style="color:#28a0dc">Ajoyib</span> Userbot hisoblanadi<br><span
        style="color: #18cc18; display: none" class="authorized">Authorized!</span></div>
    <div class="center">
      {% if not tg_done %}
      <div class="button" id="get_started">
        <div class="horiz_center">
          <div class="vert_center">
            Boshlash
          </div>

          <div class="vert_center">
            <i class="gg-arrow-right-r"></i>
          </div>
        </div>
      </div>
      {% elif not lavhost %}
      <div class="button" id="get_started">
        <div class="horiz_center">
          <div class="vert_center">
            Telefon raqam qo‘shish
          </div>

          <div class="vert_center">
            <i class="gg-add"></i>
          </div>
        </div>
      </div>
      {% endif %}
      {% if skip_creds and not lavhost %}
      <div class="button" id="enter_api">
        <div class="horiz_center">
          <div class="vert_center">
            API ma'lumotlarni o'zgartirish
          </div>

          <div class="vert_center">
            <i class="gg-brackets"></i>
          </div>
        </div>
      </div>
      {% endif %}
      <span id="block_api_id">
        <label class="api_id" for="api_id">Telegram API ID: </label>
        <input class="api_id" id="api_id" placeholder="••••" style="width: 4em;">
      </span>
      <span id="block_api_hash">
        <label class="api_hash" for="api_hash">Telegram API hash: </label>
        <input class="api_hash" id="api_hash" placeholder="••••••••••••••••••••••••••••••••" style="width: 24em;">
      </span>
      <span id="block_phone">
        <label class="phone" for="phone">Telefon raqam: </label>
        <input class="phone" id="phone" placeholder="••••••••••••" style="width: 12em;">
      </span>
      <span id="block_2fa">
        <label class="_2fa" for="_2fa">2 bosqichli parol: </label>
        <input class="_2fa" id="_2fa" placeholder="password" style="width: 12em;" type="password">
      </span>
      <span id="block_custom_bot">
        <label class="custom_bot" for="custom_bot">Ichki bot foydalanuvchi nomi (Masalan: @username_bot ): </label>
        <input class="custom_bot" id="custom_bot" placeholder="Avtomatik ravishda yaratish uchun bo'sh qoldiring"
          style="width: 20em;" type="text">
      </span>
    </div>

    <div class="horiz_center">
      <div id="continue_btn" class="button">
        <div class="horiz_center">
          <div class="vert_center">
            Davom etish
          </div>

          <div class="vert_center">
            <i class="gg-chevron-right-o"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="root">

  </div>
</div>
<div class="lights">
  <div class="light x1"></div>
  <div class="light x2"></div>
  <div class="light x3"></div>
  <div class="light x4"></div>
  <div class="light x5"></div>
  <div class="light x6"></div>
  <div class="light x7"></div>
  <div class="light x8"></div>
  <div class="light x9"></div>
</div>
<script>
  var skip_creds = "{{ skip_creds }}" == "True";
  var auth_required = true;
  fetch("/check_session", {
      method: "POST",
      credentials: "include"
    })
    .then(response => response.text())
    .then((response) => {
      auth_required = response != "1";
    })
</script>
<script src="{{ static("root.js") }}"></script>
{% if okteto %}
<script src="{{ static("okteto.js") }}"></script>
{% endif %}
{% endblock %}
